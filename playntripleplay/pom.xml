    </profile>
  </profiles>
  <modules>
    <module>assets</module>
    <module>core</module>
  </modules>
  <dependencies>
  	<dependency>
  		<groupId>com.threerings</groupId>
  		<artifactId>tripleplay</artifactId>
  		<version>${playn.version}</version>
  	</dependency>
  	<dependency>
